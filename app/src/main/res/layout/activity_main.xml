<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultLayout"
    android:orientation="vertical"
    tools:context="MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="25dp"
        android:orientation="vertical"
        android:id="@+id/llayout_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView style="@style/LabelHeader"
                    android:text="Sign In"
                    android:gravity="center"
                    android:layout_gravity="top"/>

            </LinearLayout>

            <EditText style="@style/EditText"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/txt_email"/>

            <EditText style="@style/EditText"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/txt_password"/>

            <Button style="@style/Button"
                android:text="Sign In"
                android:id="@+id/btn_signin"
                android:onClick="signIn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_u"
                android:textColor="#0033ff"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/txtview_signup"
                android:onClick="signUp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgotp_u"
                android:textColor="#0033ff"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/txtview_forgotp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>